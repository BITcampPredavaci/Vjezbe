package ba.bitcamp.benjamin.pools;

public class Greetings implements Runnable {

	private int id;

	public Greetings(int id) {
		this.id = id;
	}

	@Override
	public void run() {
		int repetitions = 5;
		for (int i = 0; i < repetitions; i++) {
			System.out.printf("Hi I am thread %2d, my count is %2d\n", this.id,
					i);
		}
	}

}
